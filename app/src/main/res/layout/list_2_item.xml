        android:id="@+id/swipe"
        android:gravity="center"
        android:background="@color/_list_2_primary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv"
            style="@style/st_24_black"/>
    </LinearLayout>


